# Backend API Configuration 
# Use relative path for development (akan di-proxy oleh Vite)
VITE_API_BASE_URL=/llt-svc

# For production or direct connection (uncomment as needed)
# VITE_API_BASE_URL=http://localhost:3000/llt-svc
# VITE_API_BASE_URL=http://localhost:3001/llt-svc
# VITE_API_BASE_URL=http://localhost:8000/llt-svc
# VITE_API_BASE_URL=https://api-staging.yourdomain.com/llt-svc

# Backend Target for Proxy (used by vite.config.js)
VITE_BACKEND_TARGET=http://localhost:3000

# Mobile Application Configuration
VITE_APP_NAME=lib-llt-mobile-vue
VITE_APP_VERSION=0.0.0

# Development Configuration  
VITE_DEV_PORT=5175

# Authentication Configuration
VITE_JWT_TOKEN_KEY=mobile_auth_token
VITE_JWT_REFRESH_KEY=mobile_refresh_token

# Mobile Specific Configuration
VITE_DEFAULT_LANGUAGE=id
VITE_TIMEZONE=Asia/Jakarta

# Surveyor App Configuration
VITE_SURVEYOR_APP_NAME=Surveyor App
VITE_SURVEYOR_APP_SUBTITLE=Sistem Informasi Lansia Terpadu

# QR Scanner Configuration  
VITE_QR_SCAN_TIMEOUT=30000
VITE_QR_CAMERA_FACING=environment

# Offline/PWA Configuration
VITE_ENABLE_OFFLINE=true
VITE_CACHE_VERSION=1.0.0